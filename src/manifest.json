{
    "name": "TAKETAKE ZOO CHAT",
    "description": "taketake zoo chat",
    "version": "2.1.3",
    "manifest_version": 3,
    "content_scripts": [
	        {
			          "js": ["initdata/js/first_name.js","initdata/js/animal_temp.js","unit/js/StorageClass.js","unit/js/NoticeClass.js","unit/js/UserClass.js","unit/js/FirstnameManagerClass.js","content/js/content.js"],
			          "css": ["content/css/chat.css"],
			          "matches": ["https://www.twitch.tv/popout/*"]
                }
    ],
    "permissions": [ "tabs",
	             "storage",
                     "unlimitedStorage"
    ],
    "action": {
        "default_popup": "popup/html/popup.html"
    },
    "icons": {
    "16": "icon/taketake16_16.png",
    "48": "icon/taketake48_48.png",
    "128": "icon/taketake128_128.png"
  }
}

