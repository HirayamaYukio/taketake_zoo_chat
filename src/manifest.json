{
    "name": "TAKETAKE ZOO CHAT",
    "description": "taketake zoo chat",
    "version": "1.0.1",
    "manifest_version": 3,
    "content_scripts": [
	        {
			          "js": ["first_name.js","animal_temp.js","UserClass.js","FirstnameManagerClass.js","content.js"],
			          "css": ["chat.css"],
			          "matches": ["https://www.twitch.tv/popout/*"]
                }
    ],
    "permissions": [
      "tabs"
    ],

    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
    "16": "icon/taketake16_16.png",
    "48": "icon/taketake48_48.png",
    "128": "icon/taketake128_128.png"
  }
}

